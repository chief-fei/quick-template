.{{fileName}} {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;

  &__header {
    padding: 20rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
  }

  &__title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
  }

  &__content {
    flex: 1;
    padding: 20rpx;
    background-color: #f5f5f5;
  }

  &__footer {
    padding: 20rpx;
    background-color: #fff;
    border-top: 1rpx solid #eee;
  }

  &__loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40rpx;
  }

  &__loading-icon {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #f3f3f3;
    border-top: 4rpx solid #07c160;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  &__loading-text {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #999;
  }

  &__empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40rpx;
  }

  &__empty-image {
    width: 200rpx;
    height: 200rpx;
  }

  &__empty-text {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #999;
  }

  &__error {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40rpx;
  }

  &__error-text {
    margin-bottom: 20rpx;
    font-size: 28rpx;
    color: #ff4d4f;
  }

  &__error-button {
    min-width: 160rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    background-color: #ff4d4f;
    color: #fff;
    border-radius: 8rpx;
    font-size: 28rpx;
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
