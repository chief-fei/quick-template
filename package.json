{
  "name": "quick-template",
  "displayName": "quick-template",
  "version": "1.0.0",
  "description": "quick create react component or vue component with vscode extension",
  "categories": [
    "Other"
  ],
  "keywords": [
    "vscode",
    "extension",
    "boilerplate",
    "react",
    "vue",
    "template",
    "component",
    "page",
    "component",
    "page",
    "component",
    "page"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chief-fei/quick-template.git"
  },
  "license": "MIT",
  "publisher": "chief",
  "main": "./out/extension.js",
  "scripts": {
    "ci:eslint": "eslint -f json src -o ./.ci/eslint.json",
    "build": "vite build",
    "dev": "vite build --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "prepare": "husky",
    "test": "vscode-test"
  },
  "contributes": {
    "commands": [
      {
        "command": "quick-template.createReactComponent",
        "title": "创建 React 组件"
      },
      {
        "command": "quick-template.createVueComponent",
        "title": "创建 Vue 组件"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "quick-template.createComponent",
          "group": "1_modification"
        }
      ],
      "quick-template.createComponent": [
        {
          "command": "quick-template.createReactComponent",
          "group": "1_modification"
        },
        {
          "command": "quick-template.createVueComponent",
          "group": "1_modification"
        }
      ]
    },
    "submenus": [
      {
        "id": "quick-template.createComponent",
        "label": "创建组件",
        "icon": "$(file-add)"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:javascriptvue",
    "onLanguage:typescriptvue"
  ],
  "commitlint": {
    "extends": [
      "ali"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx,vue}": "eslint --fix",
    "*.{cjs,css,cts,html,js,json,jsx,less,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": "prettier-config-ali",
  "dependencies": {
    "node-plop": "0.26.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "~20.17.30",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.1",
    "commitlint-config-ali": "^1.1.0",
    "eslint": "^9.24.0",
    "eslint-config-ali": "^16.1.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "glob": "^10.4.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prettier-config-ali": "^1.3.2",
    "typescript": "^5.8.3",
    "vite": "^6.2.5"
  },
  "engines": {
    "node": ">=22.0.0",
    "vscode": "^1.90.0"
  }
}
